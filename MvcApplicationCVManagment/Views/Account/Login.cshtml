@model MvcApplicationCVManagment.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLanding.cshtml";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="col-md-6 col-md-offset-2">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Please sign in</h3>
        </div>
        <div class="panel-body">
            <form accept-charset="UTF-8" role="form" id="userData">
                <fieldset>
                    <div class="form-group">
                        <input class="form-control" placeholder="User Name" name="UserName" type="text" value="">
                    </div>
                    <div class="form-group">
                        <input class="form-control" placeholder="Password" name="password" type="password" value="">
                    </div>
                    <div>
                        <label>
                            <a href="/account/Register">Registration</a>
                        </label>
                    </div>
                    <input class="btn btn-lg btn-success btn-block" type="submit" value="Login">
                </fieldset>
            </form>
        </div>
    </div>
</div>
}